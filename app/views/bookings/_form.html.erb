
<%= simple_form_for [@beast, @booking] do |f| %>
  <%= f.input :date_start,
            label: "Date de début",
            as: :string,
            minDate: "today",
            input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :date_end,
            label: "Date de fin",
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
  <%= f.submit "Réserver !", class: "btn btn-success", data: {turbo_method: :post, turbo_confirm: "Vous confirmez votre réservation ?"}%>
<% end %>


<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-2">Tableau de bord</h1>
      <h3 class="text-muted">
        <%= current_user.email %>
      </h3>
    </div>
    <div>
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path,
                    class: "btn btn-outline-danger",
                    data: { turbo_method: :delete,
                            turbo_confirm: "Vous confirmez la déconnexion ?" } do %>
          <i class="fas fa-sign-out-alt"></i> Déconnexion
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="d-flex flex-column align-items-center">
    <%= link_to bookings_path, class: "btn btn-primary btn-lg mb-3 w-50" do %>
      <i class="fas fa-calendar-alt me-2"></i> Mes Réservations
    <% end %>

    <% if @is_owner %>
      <%= link_to owner_beasts_path, class: "btn btn-primary btn-lg mb-3 w-50" do %>
        <i class="fas fa-dragon me-2"></i> Mes créatures
      <% end %>

      <%= link_to owner_bookings_path, class: "btn btn-primary btn-lg mb-3 w-50" do %>
        <i class="fas fa-book me-2"></i> Mes créatures en location
      <% end %>
    <% end %>
  </div>
</div>

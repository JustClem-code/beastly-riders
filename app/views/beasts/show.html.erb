<div class="container">
  <div class="row"> <!-- Utilisation d'une rangée Bootstrap -->
    <div class="col-md-6"> <!-- Colonne pour les images (maintenant à gauche) -->
      <div class="image-gallery">
        <%unless @beast.photos.empty?%>
          <% @beast.photos.each do |image| %>
            <%= cl_image_tag image.key, class: "img-fluid rounded" %>
          <%end%>
        <%else%>
          <%= image_tag @beast.image, class: "img-fluid rounded ", alt: "image de la créature" %>
        <%end%>
        <div class="row thumbnail-gallery">
          <% 3.times do %>
            <%unless @beast.photos.empty?%>
              <div class="col-4">
                <%= image_tag @beast.photos[0], class: "img-fluid rounded thumbnail", alt: "Miniature de la créature" %>
              </div>
            <%else%>
              <div class="col-4">
                <%= image_tag @beast.image, class: "img-fluid rounded thumbnail", alt: "Miniature de la créature" %>
              </div>
            <%end%>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-6"> <!-- Colonne pour le texte (maintenant à droite) -->
      <h1><%= @beast.name %></h1>
      <h3><%= @beast.category %></h3>
      <h5><%= @beast.price_per_day %> </h5>
      <h5><%= @beast.speed %> </h5>
      <p><%= @beast.description %></p>
      <div class="mt-3"> <!-- Boutons -->
        <% if @owner %>
          <%= link_to "Modifier mon annonce", edit_beast_path(@beast), class: "btn btn-primary me-2" %>
          <%= link_to "Supprimer mon annonce", beast_path(@beast),
              data: {turbo_method: :delete, turbo_confirm: "Vous êtes sûr ?"},
              class: "btn btn-danger" %>
        <% else %>
          <%= link_to "Réserver cette créature !", new_beast_booking_path(@beast), class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

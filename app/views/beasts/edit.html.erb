<div class="container">
  <% current_user.email if user_signed_in? %>
  <h1><%= "Modifier mon annonce" %></h1>
  <%= simple_form_for @beast do |f| %>
    <%= f.input :name%>
    <%= f.input :description, as: :text%>
    <%# Enlever as: :float, remplacer par :text%>
    <%= f.input :price_per_day, as: :float%>
    <%= f.input :image, as: :file%>
    <%= f.input :category, collection: Beast::CATEGORY, default: Beast::CATEGORY%>
    <%# Enlever as: :float, remplacer par :text%>
    <%= f.input :speed, as: :float%>
    <%= f.submit "Edit Beast", class: "btn btn-primary" %>
  <% end %>
</div>

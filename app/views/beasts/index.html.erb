<div class="row">
  <%@beasts.each do |beast|%>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card m-1" style="height: 600px;">
        <img class="card-img-top" src=<%= beast.image%> alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">
            <%= beast.name%>
          </h5>
          <p class="card-text"><%= beast.description%></p>
          <%# <%= link_to "voir", beast_path, class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  <%end%>
</div>

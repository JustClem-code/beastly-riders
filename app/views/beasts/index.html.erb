<div class="row">
  <%@beasts.each do |beast|%>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <%= link_to beast_path(beast) do%>
        <div class="card m-1" style="height: 600px;">
          <%unless beast.photos.empty?%>
            <% beast.photos.each do |image| %>
              <%= cl_image_tag image.key, class: "card-img-top" %>
            <%end%>
          <%else%>
            <img class="card-img-top" src=<%= beast.image%> alt="Card image cap">
          <%end%>
          <div class="card-body">
            <h5 class="card-title">
              <%= beast.name%>
            </h5>
          </div>
        </div>
      <%end%>
    </div>
  <%end%>
</div>
